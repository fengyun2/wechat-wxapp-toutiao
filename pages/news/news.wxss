.container {
    min-height: 100%;
    font-family: "pingfang SC", "Microsoft YaHei", "Helvetica Neue", Helvetica, sans-serif;
}

.nav {
    display: flex;
    width: 100%;
    line-height: 2rem;
    flex-wrap: nowrap;
    justify-content: space-between;
    text-align: center;
    white-space: nowrap;
    overflow: hidden;
}

.nav::-webkit-scrollbar {
    /*隐藏滚轮*/
    display: none;
}

.nav-item {
    /*flex: 1 0 auto;*/
    display: inline-block;
    padding: 0 1rem;
}

.nav-item.active {
    color: #3eb94e;
    border-bottom: 2px solid #3eb94e;
}

.content {
    padding-top: 20px;
}
.news_list__item {
    font-size: 16px;
    display: flex;
    overflow: hidden;
    height: 100px;
    margin-bottom: 20px;
}
.news_list__item__body {
    position: relative;
    flex: auto;
}
.news_list__item__sub_title {
    position: absolute;
    left: 0;
    bottom: 0;
    color: #ddd;
}
.news_list__item__footer {
    display: flex;
    width: 30%;
}